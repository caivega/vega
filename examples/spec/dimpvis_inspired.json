{
  "width": 800,
  "height": 600,

  "data": [
  {
    "name": "countries",
    "url": "data/countries.json"
  },
  {
    "name": "current_point",
    "url": "data/countries.json",
    "transform": [
      {
        "type": "filter",
        "test": "d.year == year && d.country == clickedCountry && dragging"
      }
    ]
  },
  {
    "name": "countries_year",
    "url": "data/countries.json",
    "transform": [
      {
        "type": "filter",
        "test": "d.year == year"
      },
      {
        "type": "formula",
        "field": "inter_fertility",
        "expr": "inter_year==2000?d.fertility:d.fertility+(d.n_fertility-d.fertility)*(inter_year-d.year)/5"
      },
      {
        "type": "formula",
        "field": "inter_life_expect",
        "expr": "inter_year==2000?d.life_expect:d.life_expect+(d.n_life_expect-d.life_expect)*(inter_year-d.year)/5"
      }
    ]
  },
  {
    "name": "country_timeline",
    "url": "data/countries.json",
    "transform": [
      {
        "type": "filter",
        "test": "d.country == clickedCountry"
      },
      {
        "type": "sort",
        "by": "year"
      }
    ]
  },
  {
  "name": "selectedPts",
    "modify": [
      {
        "type": "clear",
        "predicate": "clearPts"
      },
      {
        "type": "toggle",
        "signal": "clickedPt",
        "field": "id"
      }
    ]
  }],

  "signals": [
    {
      "name": "xMouse",
      "init": 0,
      "streams": [{"type":"mousemove[dragging]", "expr": "p.x", "scale":"x", "invert":true}]
    },
    {
      "name": "yMouse",
      "init": 0,
      "streams": [{"type":"mousemove[dragging]", "expr": "p.y", "scale":"y", "invert":true}]
    },
    {
      "name": "old_year",
      "init": 1955,
      "streams":[{"type":"mousemove[dragging]", "expr":"max(1955,min(2000,5*floor((1955+(p.x-dragging)/5) / 5)))"}]
    },
    {
      "name": "currDist",
      "init": 0,
      "streams":[{"type":"mousemove[dragging]", "expr":"pow(xMouse-d.fertility,2)+pow(yMouse-d.life_expect,2)"}]
    },
    {
      "name": "nextDist",
      "init": 0,
      "streams":[{"type":"mousemove[dragging]", "expr":"pow(xMouse-d.n_fertility,2)+pow(yMouse-d.n_life_expect,2) || 99999"}]
    },
    {
      "name": "prevDist",
      "init": 0,
      "streams":[{"type":"mousemove[dragging]", "expr":"pow(xMouse-d.p_fertility,2)+pow(yMouse-d.p_life_expect,2) || 99999"}]
    },
    {
      "name": "year",
      "init": 1955,
      "streams":[{"type":"mousemove[dragging]", "expr":"min(currDist,nextDist,prevDist)==prevDist?year-5 : min(currDist,nextDist,prevDist)==nextDist ? year+5 : year"}]
    },
    {
      "name": "inter_year",
      "init": 1955,
      "streams": [{"type":"year", "expr":"year"}]
    },
    {
      "name": "old_inter_year",
      "init": 1955,
      "streams":[{"type":"mousemove[dragging]", "expr":"max(1955,min(2000,1955+(p.x-dragging)/5))"}]
    },
    {
      "name": "dragging",
      "init": 0,
      "streams": [{"type":".point:mousedown", "expr":"p.x"},
                  {"type":"mouseup", "expr": "0"}]
    },
    {
      "name": "clickedPt",
      "init": 0,
      "streams": [{"type": ".point:mousemove[!dragging]", "expr": "d._id"},
                  {"type": ".point:touchstart[!dragging]", "expr": "d._id"}]
    },
    {
      "name": "clickedCountry",
      "init": "",
      "streams": [{"type": ".point:mousemove[!dragging]", "expr": "d.country"},
                  {"type": ".point:touchmove[!dragging]", "expr": "d.country"}]
    },
    {
      "name": "preventClear",
      "init": false,
      "streams": [{"type": "click", "expr": "e.shiftKey"},
                  {"type": "touchend", "expr": "i.class=='point'"}]
    }
  ],
  "predicates": [
   {
      "name": "clearPts",
      "type": "==",
      "operands": [{"signal": "preventClear"}, {"value": false}]
    },
    {
      "name": "isSelected",
      "type": "==",
      "operands": [{"arg": "country"}, {"signal": "clickedCountry"}]
    }
  ],

  "scales": [
    {
      "name": "x",
      "range": "width", "zero": false,
      "domain": {"data": "countries", "field": "fertility"}
    },
    {
      "name": "y",
      "range": "height",
      "nice": true, "zero": false,
      "domain": {"data": "countries", "field": "life_expect"}
    }
  ],

  "axes": [
    {"type": "x", "scale": "x", "offset": 5, "ticks": 5, "title": "Fertility"},
    {"type": "y", "scale": "y", "offset": 5, "ticks": 5, "title": "Life Expectancy"}
  ],

  "marks": [
    {
      "type": "text",
      "properties": {
        "update": {
          "text": {"signal": "year"},
          "x": {"value": 300},
          "y": {"value": 300},
          "width": {"value": 100},
          "height": {"value": "auto"},
          "fill": {"value": "grey"},
          "fillOpacity": {"value": 0.25},
          "fontSize": {"value": 100}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "country_timeline"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "fertility"},
          "y": {"scale": "y", "field": "life_expect"},
          "fill": {"value": "grey"},
          "fillOpacity": {"value": 0.5},
          "text": {"field": "year"}
        }
      }
    },
    {
      "type": "line",
      "from": {"data": "country_timeline"},
      "properties": {
        "update": {
          "x": {"scale": "x", "field": "fertility"},
          "y": {"scale": "y", "field": "life_expect"},
          "stroke": {"value": "grey"},
          "strokeOpacity": {"value": 0.5},
          "size": {"value": 100}
        }
      }
    },
    {
      "type": "text",
      "from": {"data":"countries_year"},
      "properties": {
        "enter": {
          "fill": {"value": "black"},
          "fillOpacity": {"value": 0.25},
          "size": {"value": 100},
          "text": {"field": "country"}
        },
        "update": {
          "x": {"scale": "x", "field": "inter_fertility", "offset": 8},
          "y": {"scale": "y", "field": "inter_life_expect", "offset": 4},
          "fillOpacity": {
           "rule": [
              {
                "predicate": "isSelected",
                "input": {
                  "country": {"field": "country"}
                },
                "value": 0.5
              },
              {"value": 0}
            ]
          }
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "countries_year"},
      "properties": {
        "enter": {
          "class": {"value": "point"},
          "fill": {"value": "steelblue"},
          "fillOpacity": {"value": 0.5},
          "size": {"value": 100}
        },
        "update": {
          "x": {"scale": "x", "field": "inter_fertility"},
          "y": {"scale": "y", "field": "inter_life_expect"},
          "fillOpacity": {
           "rule": [
              {
                "predicate": "isSelected",
                "input": {
                  "country": {"field": "country"}
                },
                "value": 1
              },
              {"value": 0.5}
            ]
          }
        }
      }
    },
    {
      "type": "rect",
      "from": {"data":"current_point"},
      "properties": {
        "enter": {
          "class": {"value":"overlay"},
          "fill": {"value":"red"},
          "fillOpacity": {"value": 0},
          "x":{"value":0},
          "y":{"value":0},
          "width": {"value":800},
          "height": {"value":600}
        }
      }
    }
  ]
}
