{
  "width": 720,
  "height": 480,
  "signals": [
    {
      "name": "twotouchmove",
      "init": "[]",
      "streams": [
        {"type": "touchmove[e.touches.length==2]", "expr":"[{x: p.x-e.changedTouches[0].clientX + e.touches[0].clientX, y: p.y-e.changedTouches[0].clientY + e.touches[0].clientY},{x: p.x-e.changedTouches[0].clientX + e.touches[1].clientX, y: p.y-e.changedTouches[0].clientY + e.touches[1].clientY}]"}
      ]
    },
    {
      "name": "twotouchend",
      "init": "null",
      "streams": [
        {"type": "touchmove[e.touches.length!=2]", "expr":"null"},
        {"type": "touchstart[e.touches.length!=2]", "expr":"null"},
        {"type": "touchend[e.touches.length!=2]", "expr":"null"}
      ]
    },
    {
      "name": "draggingBoth",
      "init": "false",
      "streams": [
        {"type": "touchstart, touchend", "expr": "false"},
        {"type": ".box:touchstart","scale":"xContext","invert":true,"expr": "p.x"}
      ]
    },
    {
      "name": "draggingBothDelta",
      "init": 0,
      "streams": [{"type": "draggingBoth", "expr": "draggingBoth"}]
    },
    {
      "name": "dragging1",
      "init": "false",
      "streams": [
        {"type": "touchstart, touchend", "expr": "false"},
        {"type": ".handle1:touchstart","expr": "true"}
      ]
    },
    {
      "name": "dragging2",
      "init": "false",
      "streams": [
        {"type": "touchstart, touchend", "expr": "false"},
        {"type": ".handle2:touchstart","expr": "true"}
      ]
    },
    {
      "name": "touchevent",
      "init": "false",
      "streams": [
        {"type": "touchmove,touchstart,touchend","expr": "true"},
        {"type": "mousedown, mouseup", "expr": "false"}
      ]
    },
    {
      "name": "brush_start",
      "streams": [
        {
          "type": "twotouchmove", "expr": "twotouchmove[0].x", "scale": "xContext", "invert": true
        },
        {
          "type": "mousedown,touchstart[!dragging2][i.class!='box'],touchmove[dragging1]",
          "expr": "p.x",
          "scale": "xContext",
          "invert": true
        }
      ]
    },
    {
      "name": "brush_end",
      "streams": [
        {
          "type": "twotouchmove", "expr": "twotouchmove[1].x", "scale": "xContext", "invert": true
        },
        {
          "type": "mousedown,[mousedown,mouseup]>mousemove,touchmove[!dragging1][i.class!='box']",
          "expr": "p.x",
          "scale": "xContext",
          "invert": true
        }
      ]
    },
    {
      "name": "date_start",
      "init": 946713600000,
      "streams": [
        {
          "type": "brush_start",
          "expr": "date(brush_start)"
        }
      ]
    },
    {
      "name": "date_end",
      "init": 946713600000,
      "streams": [
        {
          "type": "brush_end",
          "expr": "date(brush_end)"
        }
      ]
    },
    {
      "name": "min_date",
      "expr": "min(date_start,date_end)"
    },
    {
      "name": "max_date",
      "expr": "max(date_start,date_end)"
    }
  ],
  "predicates": [
    {
      "name": "touch_enabled",
      "type": "==",
      "operands": [{"signal": "touchevent"},{"value": true}]
    },
    {
      "name": "dragging1",
      "type": "==",
      "operands": [{"signal": "dragging1"},{"value": true}]
    },
    {
      "name": "dragging2",
      "type": "==",
      "operands": [{"signal": "dragging2"},{"value": true}]
    }
  ],
  "data": [
    {
      "name": "sp500",
      "url": "data/sp500.csv",
      "format": {
        "type": "csv",
        "parse": {
          "price": "number",
          "date": "date"
        }
      }
    },
    {
      "name": "sp500_filtered",
      "source": "sp500",
      "transform": [
        {
          "type": "filter",
          "test": "min_date==max_date||min(date_start,date_end)<=d.date&&d.date<=max(date_start,date_end)"
        },
        {
          "type": "sort",
          "by": "date"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "xContext",
      "type": "time",
      "range": [
        0,
        720
      ],
      "domain": {
        "data": "sp500",
        "field": "date"
      }
    },
    {
      "name": "yContext",
      "type": "linear",
      "range": [
        70,
        0
      ],
      "nice": true,
      "domain": {
        "data": "sp500",
        "field": "price"
      }
    },
    {
      "name": "xFocus",
      "type": "time",
      "range": [
        0,
        720
      ],
      "domain": {
        "data": "sp500_filtered",
        "field": "date"
      }
    },
    {
      "name": "yFocus",
      "type": "linear",
      "range": [
        390,
        0
      ],
      "nice": true,
      "domain": {
        "data": "sp500_filtered",
        "field": "price"
      }
    }
  ],
  "marks": [
    {
      "type": "group",
      "properties": {
        "enter": {
          "x": {
            "value": 0
          },
          "y": {
            "value": 0
          },
          "height": {
            "value": 390
          },
          "width": {
            "value": 720
          }
        }
      },
      "axes": [
        {
          "type": "x",
          "scale": "xFocus"
        },
        {
          "type": "y",
          "scale": "yFocus"
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "sp500_filtered"
          },
          "properties": {
            "update": {
              "x": {
                "scale": "xFocus",
                "field": "date"
              },
              "y": {
                "scale": "yFocus",
                "field": "price"
              },
              "y2": {
                "scale": "yFocus",
                "value": 0
              },
              "fill": {
                "value": "steelblue"
              }
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "properties": {
        "enter": {
          "x": {
            "value": 0
          },
          "y": {
            "value": 430
          },
          "height": {
            "value": 70
          },
          "width": {
            "value": 720
          }
        }
      },
      "axes": [
        {
          "type": "x",
          "scale": "xContext"
        }
      ],
      "marks": [
        {
          "type": "area",
          "from": {
            "data": "sp500"
          },
          "properties": {
            "enter": {
              "class": "overview"
            },
            "update": {
              "x": {
                "scale": "xContext",
                "field": "date"
              },
              "y": {
                "scale": "yContext",
                "field": "price"
              },
              "y2": {
                "scale": "yContext",
                "value": 0
              },
              "fill": {
                "value": "steelblue"
              }
            }
          }
        },
        {
          "type": "rect",
          "properties": {
            "enter": {
              "y": {
                "value": 0
              },
              "height": {
                "value": 70
              },
              "fill": {
                "value": "#333"
              },
              "fillOpacity": {
                "value": 0.2
              },
              "stroke": {
                "value": "white"
              },
              "strokeOpacity": {
                "value": 0.5
              },
              "class": {
                "value": "box"
              }
            },
            "update": {
              "x": {
                "scale": "xContext",
                "signal": "date_start"
              },
              "x2": {
                "scale": "xContext",
                "signal": "date_end"
              }
            }
          }
        },
        {
          "type": "symbol",
          "properties": {
            "enter": {
              "class": {
                "value": "handle1"
              },
              "y": {
                "value": 0
              },
              "fill": {
                "value": "red"
              },
              "fillOpacity": {
                "value": 0.2
              }
            },
            "update": {
              "size": {
                "rule": [
                  {
                    "predicate": "dragging1",
                    "value": 1600
                  },
                  {
                    "predicate": "touch_enabled",
                    "value": 800
                  },
                  {
                    "value": 0
                  }
                ]
              },
              "x": {
                "scale": "xContext",
                "signal": "date_start"
              }
            }
          }
        },
        {
          "type": "symbol",
          "properties": {
            "enter": {
              "class": {
                "value": "handle2"
              },
              "y": {
                "value": 0
              },
              "fill": {
                "value": "red"
              },
              "fillOpacity": {
                "value": 0.2
              }
            },
            "update": {
              "size": {
                "rule": [
                  {
                    "predicate": "dragging2",
                    "value": 1600
                  },
                  {
                    "predicate": "touch_enabled",
                    "value": 800
                  },
                  {
                    "value": 0
                  }
                ]
              },
              "x": {
                "scale": "xContext",
                "signal": "date_end"
              }
            }
          }
        }
      ]
    }
  ]
}